<div class="jumbotron">
  <h1>Wanna get a job?</h1>
  <p class="lead"><strong>Get The Edge</strong> will guide you on what skills/technologies to learn</p>
  <hr class="my-4">
  {{#if user}}
    <a href="/auth/logout">
      <i class="fas fa-sign-out-alt"></i>
      Logout
    </a>
  {{else}}
    <a type="button" href="/auth/google" class="btn btn-danger">
      <i class="fab fa-google"></i>
      Login with Google
    </a>
  {{/if}}
</div>

<h4 class="mb-4 mt-4">
  Default crawls
</h4>
<div class="row rol-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
  {{#each allCrawls}}
    <div class="col mb-4">
      <a href="/crawls/{{_id}}" class="show-link">
        <div class="card h-100 shadow" style="width: 300px" data-aos="fade-left">
          <div class="card-body">
            <div class="card-title"><h3>{{jobTitle}}</h3></div>
            <div class="card-text mb-3"><Strong>Region</Strong> : {{region}}</div>
            <div class="card-text mb-3">
              {{#each skills}}
                {{#if ../isDefault}}
                  <span class="badge badge-pill badge-primary">{{keyword}}</span>
                {{else}}
                  <span class="badge badge-pill badge-success">{{keyword}}</span>
                {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      </a>
    </div>
  {{/each}}
</div>

